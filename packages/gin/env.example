# Database Configuration
DB_HOST=postgres
DB_USER=postgres
DB_PASSWORD=secret
DB_NAME=akkuea
DB_PORT=5432

# API Configuration
PORT=8080

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h

# AI Curation configuration
# Provider can be: xai (default)
CURATION_PROVIDER=xai
# xAI Grok API key
XAI_API_KEY=
